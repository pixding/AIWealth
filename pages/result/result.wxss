.result-area{
  padding: 15px;
}
.result-header{
  width:100%;
  margin-bottom:45px;
  position: relative;
}
.result-header image{
  display: block;
  width:100%;
  height:240px;
}
.reault-header .canvas{
  width:100%;
  height:240px;
  position: absolute;
  left:0;
  top:0;
}
.result-word{
  font-size:14px;
  color:#444;
  margin-bottom:20px;
}

.result-rec{
  background:#fff;
  margin-bottom:20px;
}
.result-rec-title{
  height: 42px;
  line-height: 42px;
  text-align: center;
  border-bottom:2px solid #00b0e0;
}
.result-rec-title span{

  font-size: 16px; font-weight: bold;
  line-height:38px;
}
.result-rec-con{
  padding:15px 10px;
  font-size:14px;
  line-height: 28px;
}
.result-rec-con .str{
  color:#f60;
}
.result-rec-prod{
  font-size:14px;
}
.result-rec-prod .lab{
  font-weight: bold;
  color:#f60;
}
.result-rec-prod .con{
  color:#666;
  
}

.result-btn{
  display:flex;

}
.result-btn .saveimg{
  border:2px solid #333;
  line-height: 36px; 
  padding: 0 20px;
  border-radius: 15px;
  font-size: 18px;
  color:#006699;
  background: #fff;
}
.result-btn .reglufax{
  border:2px solid #333;
  line-height: 36px; 
  padding: 0 20px;
  border-radius: 15px;
  font-size: 18px;
  color:#006699;
  background: #fff;
}
.result-rec-er{
  text-align: right;
  margin-top:10px;
}